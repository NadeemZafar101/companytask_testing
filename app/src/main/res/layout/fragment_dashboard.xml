<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DashboardFragment"
    android:background="@color/white">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/_20sdp"
    >
    <TextView
        android:id="@+id/roomDbButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".08"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/canvasDrawingButton"
        style="@style/normal_text"
        android:gravity="center"
        android:text="Room Db"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/bg_shape"
        />
    <TextView
        android:id="@+id/canvasDrawingButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".08"
        app:layout_constraintTop_toBottomOf="@+id/roomDbButton"
        android:layout_marginTop="@dimen/_20sdp"
        style="@style/normal_text"
        android:gravity="center"
        android:text="Canvas Drawing"
        android:background="@drawable/bg_shape"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>